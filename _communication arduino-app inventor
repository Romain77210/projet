#include <SoftwareSerial.h>

SoftwareSerial hc06(2, 3);
int f;
int r;
int g;
int t;

void setup() {
  hc06.begin(9600);
  Serial.begin(9600);

}

void loop() {
  alphabet ();

  f = analogRead(A1);
  r = map(f, 180, 230, 0, 100);
  g = analogRead(A0);
  t = map(g, 100, 250, 0, 100);

  //hc06.println(t); // envoie du message vers le smartphone
  Serial.println(t);
  delay(500);

}



void alphabet () {
  if (t > 90) {
    hc06.println("pouce en l'air");
  }
  if (t == 0) {
    hc06.println("pouce ferm√©");
  }
}
